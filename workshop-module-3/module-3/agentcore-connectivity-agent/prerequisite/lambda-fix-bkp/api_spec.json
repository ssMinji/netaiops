                },
                "destination_resource": {
                    "type": "string",
                    "description": "Destination EC2 instance ID (e.g., i-0987654321fedcba0)"
                },
                "protocol": {
                    "type": "string",
                    "description": "Network protocol for the connectivity fix (TCP, UDP, ICMP)"
                },
                "port": {
                    "type": "string", 
                    "description": "Port number for TCP/UDP protocols (e.g., 80, 443, 22)"
                },
                "session_id": {
                    "type": "string",
